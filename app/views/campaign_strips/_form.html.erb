<%= simple_form_for(@campaign_strip) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.association :creator %>
    <%= f.association :parent %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
